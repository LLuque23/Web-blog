<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label>Title</label>
    <input autocomplete="off" type="text" class="form-control" name="postTitle">
  </div>

  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" id="post" rows="4" name="postBody"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="submitButton">Publish</button>
</form>
<%- include('partials/footer'); -%>
