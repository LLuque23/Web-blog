<%- include('partials/header'); -%>
<h1>Home</h1>
<p> <%= homeContent %> </p>

<% allPosts.forEach(function(post) { %>
<h1> <%= post.postTitle %> </h1>
<p>
  <%= post.postBody.substring(0,100) + " ..." %>
  <a href="/posts/<%= post.postTitle %>">Read</a>
</p>
<% }); %>

<form action="/compose" method="get">
  <button class="btn btn-primary homeBtn" type="submit">Compose New Post</button>
</form>
<%- include('partials/footer'); -%>
